@model AsistLabTask.Entities.Document
@{
    ViewData["Title"] = "Просмотр документа";
}

<h2>@Model.Name</h2>
<p><strong>Описание:</strong> @Model.Description</p>
<p><strong>Дата создания:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
<p><strong>Размер:</strong> @Model.FileSize байт</p>
<p><strong>MimeType:</strong> @Model.MimeType</p>
<p><strong>Срок обработки:</strong> @Model.HandleByAt.ToString("dd.MM.yyyy HH:mm")</p>

<a asp-action="List" class="btn btn-secondary">Назад к списку</a>
