@{
    ViewData["Title"] = "Загрузка документа";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Название документа</label>
        <input type="text" name="name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="description">Описание</label>
        <textarea name="description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="handleByAt">Срок обработки</label>
        <input type="datetime-local" name="handleByAt" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="file">Файл</label>
        <input type="file" name="file" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Загрузить</button>
    <a asp-action="List" class="btn btn-secondary">Отмена</a>
</form>
