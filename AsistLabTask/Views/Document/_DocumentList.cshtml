@model List<Document>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Create date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Name</td>
                <td>@doc.Description</td>
                <td>@doc.CreatedAt.ToString("dd.MM.yyyy HH.mm")</td>
                <td>
                    <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>